<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  
  <PropertyGroup>
    
    <PlatformToolsetVersion>mipsel-linux-android-4.4.3</PlatformToolsetVersion>

    <PlatformShortName>mips</PlatformShortName>

    <GccVersion>4.4.3</GccVersion>

    <!-- Path to gcc prebuilt libs -->
    <PrebuiltDir>$(AndroidNdkDir)\toolchains\$(PlatformToolsetVersion)\prebuilt\windows</PrebuiltDir>
    
    <GccLibPath>$(PrebuiltDir)\lib\gcc\mipsel-linux-android\4.4.3</GccLibPath>
    <GccLibPath_Thumb>$(GccLibPath)</GccLibPath_Thumb>
    <GccLibPath_Arm7>$(GccLibPath)</GccLibPath_Arm7>
    <GccLibPath_Arm7_Thumb>$(GccLibPath)</GccLibPath_Arm7_Thumb>

    <!-- Path to the GCC compilation tools -->
    <GccToolsPath>$(AndroidNdkDir)\toolchains\$(PlatformToolsetVersion)\prebuilt\windows\bin</GccToolsPath>

    <!-- Path to the toolchain includes. Needed for Intellisense. -->
    <GccToolchainIncludes>$(PrebuiltDir)\lib\gcc\mipsel-linux-android\4.4.3\include</GccToolchainIncludes>

    <!-- GCC compilation tool filenames -->
    <GccCompiler>mipsel-linux-android-g++.exe</GccCompiler>
    <GccLinker>mipsel-linux-android-g++.exe</GccLinker>
    <GccLibrarian>mipsel-linux-android-ar.exe</GccLibrarian>
    
  </PropertyGroup>

</Project>
